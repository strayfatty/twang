{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2020",
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["DOM", "ES2020"],
        "jsx": "react",
        "jsxFactory": "m"
    }
}
